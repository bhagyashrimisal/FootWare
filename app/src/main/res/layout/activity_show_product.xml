<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout tools:context="com.example.rohini.footware.ShowProduct"
    android:background="@drawable/bg3" android:layout_height="match_parent"
    android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <ListView android:background="@drawable/pic7" android:layout_height="match_parent"
        android:layout_width="match_parent" android:layout_alignParentLeft="true"
        android:layout_marginBottom="64dp" android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" android:id="@+id/listview"/>

    <Button android:background="@android:drawable/checkbox_off_background"
        android:layout_height="30dp" android:layout_width="200dp"
        android:layout_marginBottom="13dp" android:layout_alignParentBottom="true"
        android:id="@+id/btdelete"
        android:textStyle="bold|italic" android:text="Delete Product Details"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
