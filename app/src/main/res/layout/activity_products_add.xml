<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        tools:context="com.example.rohini.footware.ProductsAdd"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/pic1">

    <EditText android:layout_height="40dp"
        android:layout_width="250dp"
        android:textStyle="bold|italic"
        android:inputType="textMultiLine"
        android:hint="Add New Product"
        android:ems="10"
        android:background="@android:color/background_light"
        android:layout_marginBottom="33dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btadn"
        android:id="@+id/etsub"/>

    <Button
        android:id="@+id/btadn"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_above="@+id/btan"
        android:layout_alignLeft="@+id/btan"
        android:layout_alignStart="@+id/btan"
        android:layout_marginBottom="38dp"
        android:background="@android:drawable/checkbox_off_background"
        android:text="Add Product"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/btan"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="134dp"
        android:background="@android:drawable/checkbox_off_background"
        android:text="Flash Product Details"
        android:textStyle="bold|italic" />

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textStyle="bold|italic"
        android:layout_marginBottom="81dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/etsub"
        android:id="@+id/textView11"
        android:text="Add New Product"
        android:textSize="24sp"/>

</RelativeLayout>

