<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rohini.footware.Welcome">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />


    <Button
        android:id="@+id/b2"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/b1"
        android:layout_marginBottom="54dp"
        android:background="@android:drawable/checkbox_off_background"
        android:text="sub-admin_login"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:layout_alignLeft="@+id/b1" />

    <Button
        android:id="@+id/b1"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_above="@+id/imageView8"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:background="@android:drawable/checkbox_off_background"
        android:text="Admin Login"
        android:textEditSideNoPasteWindowLayout="@style/AppTheme"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/b1"
        android:layout_alignStart="@+id/imageView8"
        android:layout_marginBottom="11dp"
        app:srcCompat="@drawable/web_hi_res_512"
        android:layout_alignLeft="@+id/imageView8" android:contentDescription="TODO" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/b2"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/aaa" android:contentDescription="TODO" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView9"
        android:layout_centerHorizontal="true"
        android:text="Vishal Footwear Store"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/colorAccent"
        android:textColorLink="@color/colorAccent" />

</android.widget.RelativeLayout>
